<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MainWindow"
            styleClass="root">
    <children>
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="AS_NEEDED"
                    vbarPolicy="AS_NEEDED"
                    fitToWidth="true"
                    styleClass="chat-area"
                    AnchorPane.topAnchor="0.0"
                    style="-fx-background-color: transparent;"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="25.0">
            <content>
                <VBox fx:id="dialogContainer" styleClass="dialog-container" style="-fx-background-color: transparent;"/>
            </content>
        </ScrollPane>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   styleClass="text-field"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0"
                   AnchorPane.bottomAnchor="0.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                text="Send"
                styleClass="send-button"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                prefWidth="76.0" />
    </children>
</AnchorPane>